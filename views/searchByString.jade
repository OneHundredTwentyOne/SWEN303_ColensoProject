extends layout
extends ../node_modules/jade-bootstrap/_bootstrap

block body
  +navbar("Colenso Project","dropdown_menu","inverse")
    +nav_item("/") Home
    +nav_item_dropdown("#")(label="Database")
      +nav_item("/fileList") View
      +nav_item("/uploadFile") Upload File
      +nav_item("/searchByString", "active") Search By String
      +nav_item("/searchByXQuery") Search By XQuery
  .container
    h1 Search By String:
    br
    p| Search documents via strings of text
    p| Use speech marks around items you want to search and logical operators without speech marks between them
  .container
    form(name = "simple", action = "/searchStringResult", method = "get")
      input("text", "query", "Search...", "", name = "query")
      +submit("Search")
