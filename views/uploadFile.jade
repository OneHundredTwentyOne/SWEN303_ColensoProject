extends layout
extends ../node_modules/jade-bootstrap/_bootstrap

block body
  +navbar("Colenso Project","dropdown_menu","inverse")
    +nav_item("/") Home
    +nav_item_dropdown("#")(label="Database")
      +nav_item("/fileList") View
      +nav_item("/uploadFile", "active") Upload File
      +nav_item("/searchByString") Search By String
      +nav_item("/searchByXQuery") Search By XQuery
  .container
    h1 Upload XML File To Database
    br
  .container
    form(name = "upload", action = "/upload", method = "post", enctype="multipart/form-data")
      input(type="file", name="file")
      br
      +submit("Upload File")
